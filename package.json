{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "ng-sweetalert-service",
  "version": "1.1.0",
  "description": "Angular wrapper for SweetAlert2",
  "main": "lib/index.js",
  "ngPackage": {
    "lib": {
      "entryFile": "lib/index.ts"
    },
    "whitelistedNonPeerDependencies": [
      "sweetalert2"
    ]
  },
  "scripts": {
    "build": "ng-packagr -p package.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breningham/angular-sweetalert2"
  },
  "keywords": [
    "typescript",
    "angular",
    "sweetalert2"
  ],
  "author": "Brendan Ingham <brendan.ingham13@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/breningham/angular-sweetalert2/issues"
  },
  "homepage": "https://github.com/breningham/angular-sweetalert2#readme",
  "dependencies": {
    "sweetalert2": "^7.24.3"
  },
  "peerDependencies": {
    "@angular/core": "^6.0.7",
    "@angular/platform-browser": "^6.0.7"
  },
  "devDependencies": {
    "@angular/compiler": "^6.0.7",
    "@angular/compiler-cli": "^6.0.7",
    "ng-packagr": "^3.0.3",
    "rxjs": "^6.2.1",
    "typescript": "~2.7.2"
  }
}
